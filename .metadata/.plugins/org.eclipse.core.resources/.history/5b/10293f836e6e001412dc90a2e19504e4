public void unitSizeMetric(M3 model, int projectLinesOfCode)
{

	//[Method,Risk Assessment]
	map[str,str] result = ();
	//[Method,LoC]
	map[str,int] methods = unitSize(model);
	
	//calculate highest possible ranking of method
	for(str path <- methods)
		for(i <- ranking)
			if(methods[path] > sizes[i]){
				result += (path : i);
				break;
			}
	
	map[str, int] avgRisk = calcAvgRisk(result);
	for (k <- avgRisk) 
		println("ranking <k>: <avgRisk[k]> units");

	/*
